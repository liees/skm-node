{
  "name": "skm-node",
  "version": "3.0.0",
  "description": "Modern SSH Key Manager for Node.js",
  "type": "module",
  "main": "skm.js",
  "bin": {
    "skm": "./skm.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "ssh",
    "key",
    "manager",
    "cli"
  ],
  "author": "liees",
  "license": "WTFPL",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "tmp-promise": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
